<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Note Maker</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-br from-gray-900 to-black text-white min-h-screen flex flex-col">
  <header class="bg-gray-800 shadow-md py-4 px-8 flex justify-between items-center">
    <h1 class="text-2xl font-semibold text-blue-400">üìù Note Maker</h1>
    <a href="/" class="text-gray-300 hover:text-white">Home</a>
  </header>

  <main class="flex flex-col lg:flex-row gap-10 p-10 flex-grow">
    <!-- Create Note Form -->
    <section class="bg-gray-800 p-6 rounded-xl shadow-lg w-full lg:w-1/3">
      <h2 class="text-xl font-medium mb-4 border-b border-gray-700 pb-2">Create a New Note</h2>
      <form action="/create" method="post" class="flex flex-col space-y-3">
        <input class="p-3 rounded-md bg-gray-900 border border-gray-700 text-gray-200 focus:border-blue-400 outline-none" type="text" placeholder="Enter note title..." name="title" required>
        <textarea class="p-3 rounded-md bg-gray-900 border border-gray-700 text-gray-200 focus:border-blue-400 outline-none" placeholder="Write your note details..." name="details" rows="5" required></textarea>
        <input class="bg-blue-600 hover:bg-blue-700 transition-all duration-200 py-2 rounded-md cursor-pointer" type="submit" value="Create Note">
      </form>
    </section>

    <!-- Notes Display -->
    <section class="flex-1">
      <h2 class="text-xl font-medium mb-5 border-b border-gray-700 pb-2">Your Notes</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        <% if (files.length > 0) { %>
          <% files.forEach(function(val) { %>
            <div class="bg-gray-800 rounded-xl p-5 shadow-lg hover:shadow-blue-500/30 transition-all duration-200">
              <h3 class="text-lg font-semibold mb-2 truncate"><%= val %></h3>
              <div class="flex justify-between items-center mt-3 text-sm space-x-3">
                <a href="/file/<%= val %>" class="text-blue-400 hover:underline">Read</a>
                <a href="/edit/<%= val %>" class="text-yellow-400 hover:underline">Edit</a>
                <form action="/delete/<%= val %>" method="POST" onsubmit="return confirmDelete('<%= val %>')">
                  <button type="submit" class="text-red-500 hover:underline">Delete</button>
                </form>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <p class="text-gray-400 text-center mt-10">No notes yet. Create one above!</p>
        <% } %>
      </div>
    </section>
  </main>

  <script>
    function confirmDelete(filename) {
      return confirm(`Are you sure you want to delete "${filename}"?`);
    }
  </script>
</body>
</html>
